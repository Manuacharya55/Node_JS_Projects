<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TO-DO-List</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Poppins", sans-serif;
      }
      html,
      body {
        width: 100%;
        height: 100%;
        background-color: rgb(31, 30, 30);
      }

      h1{
        color: white;
        text-align: center;
        margin: 10px 0px;
        font-size: 70px;
      }
      .task-form {
        width: 100%;
        padding: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 20px;
      }

      input[type="text"] {
        padding: 10px;
        border: 1px solid lightgrey;
        background-color: transparent;
        border-radius: 8px;
        color: white;
      }

      input[type="submit"] {
        padding: 10px 25px;
        border: none;
        border-radius: 8px;
        background-color: rgb(54, 54, 158);
        color: white;
      }
      .task-holder {
        width: 100%;
        height: auto;
        padding: 20px;
        display: flex;
        align-items: flex-start;
        justify-content: center;
        gap: 20px;
        flex-wrap: wrap;
      }
      .task {
        background-color: rgb(65, 64, 64);
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
        border: 1px solid white;
        padding: 10px;
        width: 200px;
        border-radius: 8px;
      }
      .task-name {
        text-transform: capitalize;
        color: white;
      }
      .btn-holder {
        width: 100%;
        padding-top: 15px;
        display: flex;
        align-items: center;
        justify-content: space-between;
      }

      a {
        text-decoration: none;
      }
      .edit {
        background-color: rgb(54, 54, 158);
        padding: 8px 25px;
        border: none;
        border-radius: 5px;
        color: white;
      }
      .del {
        background-color: red;
        padding: 8px 25px;
        border: none;
        border-radius: 5px;
        color: white;
      }
    </style>
  </head>
  <body>
    <div class="container">
        <h1>Add Your Note</h1>
      <form action="/api/v1/task/" method="POST" class="task-form">
        <input type="text" placeholder="add your note" name="task" />
        <input type="submit" value="submit" />
      </form>
      <div class="task-holder">
        <% allTask.forEach((task)=>{ %> <% let id = task._id %>
        <div class="task">
          <h2 class="task-name"><%= task.name %></h2>
          <div class="btn-holder">
            <a href="/api/v1/updatetask/<%=task._id %>" class="edit">edit</a>

            <a href="/api/v1/deletetask/<%=id%>" class="del">del</a>
          </div>
        </div>
        <%})%>
      </div>
    </div>
  </body>
</html>
