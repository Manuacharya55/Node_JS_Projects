<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blogify</title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Poppins", sans-serif;
      }
      html,
      body,
      .container {
        width: 100%;
        min-height: 100%;
         background-color: lightgrey;
      }

      a {
        text-decoration: none;
        color: black;
      }
      nav {
        width: 100%;
        padding: 20px 30px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        background-color: white;

        box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.1);
      }

      nav a {
        text-decoration: none;
        color: #ffa500;
      }
      nav h1 {
        font-size: 34px;
      }
      nav ul {
        list-style-type: none;
        display: flex;
        gap: 30px;
      }

      nav ul li a {
        text-decoration: none;
        color: black;
      }

      nav ul li a:hover {
        transition: 0.5s ease all;
        color: #ffa500;
      }

      .all-blog-holder {
        width: 100%;
        padding: 20px;

        display: flex;
        justify-content: flex-start;
      }
      .card {
        max-width: 300px;
        width: 100%;
        background-color: white;
        border-radius: 10px;
        overflow: hidden;
      }
      .card img {
        width: 100%;
        height: 150px;
        object-fit: cover;
      }

      h3,
      h5 {
        margin-top: 10px;
        margin-left: 8px;
      }

      .links{
        width: 100%;
        padding: 10px;
        display: flex;
        align-items: center;
        justify-content: space-between;
      }
      .del{
        color: red;
      }

      .edit{
        color: blue;
      }
      .profile-holder {
        width: 100%;
        padding: 20px;

        display: flex;
        justify-content: center;
      }
      .profile {
        max-width: 800px;
        width: 100%;
      }
      .cover-image {
        width: 100%;
        position: relative;
      }

      .cover-image img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 10px;
      }

      .profile-image {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        background-color: white;
        padding: 5px;
        overflow: hidden;
        position: absolute;
        bottom: 0px;
        right: 30px;
      }

      .profile-image img {
        width: 100%;
        height: 100%;
        border-radius: 50%;
      }

      .username{
        color: white;
      }
      .blog-holder {
        max-width: 800px;
        width: 100%;
        margin-top: 50px;

        display: flex;
        align-items: center;
        justify-content: center;
        gap: 30px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <nav>
        <a href="/blogify/home"><h1>Blogify</h1></a>
        <ul>
          <li><a href="/blogify/home">Home</a></li>
          <li><a href="/blogify/addblog">Add Blog</a></li>
          <li><a href="/blogify/profile">Profile</a></li>
        </ul>
        <a href="/blogify/logout">Logout</a>
      </nav>

      <div class="profile-holder">
        <div class="profile">
          <div class="cover-image">
            <img
              src="https://images.pexels.com/photos/1353499/pexels-photo-1353499.jpeg?auto=compress&cs=tinysrgb&w=600&lazy=load"
              alt=""
            />

            <div class="profile-image">
              <img
                src="../images/<%=user.image %>"
                alt=""
              />

            </div>
            <h1 class="username"><%= user.username %></h1>
          </div>

          <div class="blog-holder">
            <% user.blogs.forEach((blog)=>{ %> 
                
                <div class="card">
                    <img src="../images/<%=blog.image %>" alt="">
                    
                    <h3><%= blog.title %></h3>

                    <div class="links">
                        <a href="/blogify/editBlog/<%=blog._id%>" class="edit">edit</a>
                        <a href="/blogify/deleteBlog/<%=blog._id %>" class="del">delete</a>
                    </div>
                </div>
                <% }) %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
